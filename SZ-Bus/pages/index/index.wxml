<!--index.wxml-->
<view class="usermotto">
  <view class="my_title">
    <!-- 搜索 -->
    <view class="section">
      <input class="input" bindinput="bindReplaceInput" placeholder="Select Bus Stop" bindtap='jumpPage'/>
    </view>
    <view class="search_icon">
      <image style="width:55rpx;height:55rpx" src="../../images/search.png">
      </image>
    </view>
    <view class="sort_icon">
      <image style="width:55rpx;height:55rpx" src="../../images/sort-amount-desc.png">
      </image>
    </view>
  </view>
</view>
<view class="picture">
  <swiper class="swiper" indicator-dots="true" autoplay="true" interval="5000" duration="1000">

    <swiper-item>
      <image src="../../images/205.JPG" class="slide-image" mode="aspectFill"></image>
    </swiper-item>
    <swiper-item>
      <image src="../../images/311.JPG" class="slide-image" mode="aspectFill"></image>
    </swiper-item>
    <swiper-item>
      <image src="../../images/357.JPG" class="slide-image" mode="aspectFill"></image>
    </swiper-item>
    <swiper-item>
      <image src="../../images/358.JPG" class="slide-image" mode="aspectFill"></image>
    </swiper-item>
    <swiper-item>
      <image src="../../images/388.JPG" class="slide-image" mode="aspectFill"></image>
    </swiper-item>
    <swiper-item>
      <image src="../../images/立珊线.JPG" class="slide-image" mode="aspectFill"></image>
    </swiper-item>
    <swiper-item>
      <image src="../../images/旅1.JPG" class="slide-image" mode="aspectFill"></image>
    </swiper-item>

  </swiper>
</view>

<view class="container">
  <button bindtap="clickMe" class="btn1" bindtap='jumpPageTo1'>付款</button>
  <button bindtap="clickMe" class="btn2" bindtap='jumpPageTo2'>预约</button>
</view>